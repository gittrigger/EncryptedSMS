<?xml version="1.0" encoding="utf-8"?>    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/sending"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	  	    
	<ListView android:id="@+id/android:list"
		android:layout_width="fill_parent"
		android:layout_weight="1"
		android:scrollbarAlwaysDrawVerticalTrack="true"
		android:scrollbars="vertical" android:scrollbarStyle="insideInset"
		android:background="#000000" android:layout_height="200px" android:nextFocusDown="@+id/android:list"/>
    <!-- android:fastScrollEnabled="true" -->

	<LinearLayout 
		android:id="@+id/sending_detail"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_weight="1"
		android:background="#000000" android:layout_gravity="bottom" android:gravity="bottom" android:layout_height="wrap_content">
		<TextView
			android:id="@+id/sending_detail_title"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:background="#e0505050" android:paddingLeft="5px" android:layout_marginLeft="30px" android:typeface="monospace" android:shadowRadius="1.75" android:shadowColor="#e0909000" android:paddingTop="2px" android:paddingBottom="2px" android:text="Message #408" android:shadowDx=".2" android:shadowDy=".2"/>
		<TableLayout
			android:layout_marginLeft="30px"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			
			>
			<TableRow
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_weight="1"
			android:background="#000000">
			
			<TextView android:layout_width="fill_parent" android:layout_weight="1"
			android:id="@+id/sending_detail_recipient" android:layout_marginLeft="5px" android:layout_height="fill_parent" android:text="Haven Skys" android:layout_marginTop="2px" android:layout_marginBottom="2px" android:gravity="center" android:shadowColor="#FFFFFF" android:shadowDx="1.5" android:shadowDy="1.5" android:shadowRadius="2"></TextView>
			
		<ToggleButton
			android:id="@+id/sending_detail_usersa"
			android:textOff="RSA Off" android:textOn="RSA On" android:minWidth="100px" android:layout_gravity="right|center_vertical" android:checked="true" android:layout_marginTop="2px" android:minHeight="50px"/>
			
			
			
</TableRow>
			
		<TableRow android:id="@+id/TableRow01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="right">
	<Button android:layout_height="wrap_content" android:typeface="monospace" android:ellipsize="marquee" android:layout_width="fill_parent" android:id="@+id/sending_detail_send" android:text="Long Press to Send" android:width="255px" android:gravity="center"></Button>
</TableRow>

</TableLayout>
	</LinearLayout>

</LinearLayout>
