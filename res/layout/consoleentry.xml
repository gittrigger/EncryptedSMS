<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/consoleentry"
    android:padding="2dip" android:layout_height="wrap_content" android:background="#e0000030">
    
    <ImageView
        android:id="@+id/consoleentry_picture"
        
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="2dip"
        android:src="@drawable/android_icon_125" android:maxWidth="?android:attr/listPreferredItemHeight" android:fadingEdge="horizontal|vertical" android:fadingEdgeLength="3px" android:scaleType="fitXY" android:layout_height="30px" android:visibility="gone"/>




    <TextView
    	android:id="@+id/consoleentry_originator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_toRightOf="@id/consoleentry_picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical" 
        android:fadingEdge="horizontal|vertical" 
        android:singleLine="true" 
        android:text="Originator"
        android:textSize="12px" android:textColor="#e0c0c0c0"/>




    <TextView  
        android:id="@+id/consoleentry_message"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        
        android:layout_toRightOf="@id/consoleentry_picture"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/consoleentry_originator"
        
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="Body"
        android:textSize="24px" android:textColor="#e0f0f0f0" android:shadowColor="#e0f0f090" android:shadowRadius="2.75" android:shadowDy="1.4" android:shadowDx="1.4"/>

</RelativeLayout>
